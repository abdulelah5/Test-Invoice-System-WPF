<Window x:Class="invoiceWPF2.UI.invoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:invoiceWPF2.UI"
        mc:Ignorable="d"
        Title="invoice" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dgvProducts" Margin="317,0,5,291" Loaded="Edit_Load" SelectionChanged="dgvProducts_SelectionChanged"/>
        <Label Content="Customer ID:" HorizontalAlignment="Left" Margin="29,88,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.505,0.618" Width="98" FontSize="14"/>
