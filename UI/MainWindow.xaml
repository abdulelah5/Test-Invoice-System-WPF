<Window x:Class="invoiceWPF2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:invoiceWPF2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="products" Content="Products" HorizontalAlignment="Center" Margin="0,197,0,0" VerticalAlignment="Top" Width="150" Click="productsMenu"/>
        <Button x:Name="customers" Content="Customers" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="150" Click="customersMenu"/>
        <Button x:Name="invoice" Content="Invoice" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Width="150" Click="invoiceMenu"/>
    </Grid>
</Window>
